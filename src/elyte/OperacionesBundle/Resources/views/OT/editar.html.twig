{% extends 'base.html.twig' %}
{% block contenido %}
<div class="ui container">
	<h2 class="ui header">
		<i class="sticky note icon"></i>
		<div class="content">
			Orden de Trabajo
			<div class="sub header">Elyte ------------ <a class="ui red tag label">Editar</a></div>
		</div>
	</h2>
</div>
<div class="ui container">
	{{form_start(form,{'attr':{'class':'ui form'}})}}
	<div class="fields">
		<div class="five wide field">
			<label for="">Número de Ticket</label>
			{{form_widget(form.numTicket)}}
		</div>
		<div class="five wide field">
			<label for="">Número Orden de Trabajo</label>
			{{form_widget(form.numOrdTrab)}}
		</div>
		<div class="six wide field">
			{{form_label(form.ctServicio)}}
			{{form_widget(form.ctServicio)}}
		</div>
	</div>
	<div class="field">
		<div class="ui blue ribbon label">Descripción (requerimiento del cliente)</div>
		<br><br>
		{{form_widget(form.descripcion)}}
	</div>
	<div class="field">
		<div class="ui red ribbon label">Solución Elyte</div>
		<br><br>
		{{form_widget(form.solucion)}}
	</div>
	<div class="field">
		<div class="ui teal ribbon label">Solución Técnica</div>
		<br><br>
		{{form_widget(form.solucionTecnica)}}
	</div>
	<div class="field">
		<label for="">Fecha Termino Año-mes-día Hora:minutos</label>
		{{form_widget(form.fechaFin,{attr:{'placeholder':'aaaa-mm-dd hh:mm'}})}}
	</div>
	<div class="fields">
		<div class="eight wide field">
			{{form_label(form.cliente)}}
			{{form_widget(form.cliente)}}
		</div>
		<div class="eight wide field">
			{{form_label(form.tecnico)}}
			{{form_widget(form.tecnico)}}
		</div>
	</div>
	<div class="field">
		<div class="ui checkbox">
    	<input type="checkbox" name="cerrado" value=0>
    	<label>Está seguro de cerrar el ticket</label>
  	</div>
	</div>

	<button type="submmit" name="button" class="ui primary button">Guardar</button>
	<div class="ui error message"></div>
	{{form_end(form)}}
</div>

{% endblock %}

{% block javascripts %}

{% endblock %}
